          {% assign processing_fee_total_value = processing_fee_unit_value | times: processing_fee_qty %}
        {% endif %}
        {% assign processing_fee_total_value_number = processing_fee_total_value | append: '' | replace: '$', '' | replace: ',', '' | plus: 0 %}
        {% if processing_fee_total_value_number != 0 %}
        {% assign processing_fee_label = invoice_processing_fee_label | default: 'Processing / Delivery Fee' %}
        {% assign processing_fee_sku = invoice_processing_fee_sku | default: 'FEE' %}
        {% assign processing_fee_unit_display = invoice_processing_fee_formatted | default: invoice_processing_fee | default: processing_fee_unit_value %}
        {% assign processing_fee_total_display = invoice_processing_fee_total_formatted | default: processing_fee_total_value %}
        <tr>
          <td>{{ processing_fee_label }}</td>
          <td>{{ processing_fee_sku }}</td>
          <td class="inv-right">{{ processing_fee_qty }}</td>
          <td class="inv-right">{{ processing_fee_unit_display }}</td>
          <td class="inv-right">{{ processing_fee_total_display }}</td>
        </tr>
        {% endif %}
        {% assign discount_qty = invoice_discount_qty | default: 1 %}
        {% assign discount_unit_value = invoice_discount_amount | default: disc %}
        {% assign discount_total_value = invoice_discount_total %}
        {% if discount_total_value == blank %}
          {% assign discount_total_value = discount_unit_value | times: discount_qty %}
        {% endif %}
        {% assign discount_total_value_number = discount_total_value | append: '' | replace: '$', '' | replace: ',', '' | plus: 0 %}
        {% if discount_total_value_number != 0 %}
        {% assign discount_label = invoice_discount_label | default: 'Discount' %}
        {% assign discount_sku = invoice_discount_sku | default: 'DISC' %}
        {% assign discount_unit_display = invoice_discount_formatted | default: invoice_discount | default: discount_unit_value %}
        {% assign discount_total_display = invoice_discount_total_formatted | default: discount_total_value %}
        <tr>
          <td>{{ discount_label }}</td>
          <td>{{ discount_sku }}</td>
          <td class="inv-right">{{ discount_qty }}</td>
          <td class="inv-right">
            {% if discount_unit_display contains '-' %}
              {{ discount_unit_display }}
            {% else %}
              -{{ discount_unit_display }}
            {% endif %}
          </td>
          <td class="inv-right">
            {% if discount_total_display contains '-' %}
              {{ discount_total_display }}
            {% else %}
              -{{ discount_total_display }}
            {% endif %}
          </td>
        </tr>
        {% endif %}
      </tbody>
    </table>


    {% assign subtotal_display = invoice_subtotal_formatted | default: invoice_subtotal | default: invoice_subtotal_amount | default: _subtotal %}
    {% assign tax_display = invoice_tax_formatted | default: invoice_tax_amount | default: invoice_tax | default: _tax | default: 0 %}
    {% assign total_due_display = invoice_total_due_formatted | default: invoice_total_due | default: invoice_total_amount | default: _total %}

    <div class="inv-totalbox">
      <table>
        <tr>
          <td>Subtotal</td>
          <td class="inv-right">{{ subtotal_display }}</td>
        </tr>
        <tr>
          <td>Sales Tax {% if tax_rate and tax_rate != 0 %}({{ tax_rate }}%){% endif %}</td>
          <td class="inv-right">{{ tax_display | default: 0 }}</td>
        </tr>
        <tr>
          <td>Total Due (USD)</td>
          <td class="inv-right">{{ total_due_display }}</td>
        </tr>
      </table>
    </div>
    <div class="inv-notes">
      <strong>Payment Method:</strong>
      {% if escrow_company %}
        Escrow billing &mdash; Please reference File # {{ escrow_file_number | default: report_id }} on remittance.
      {% else %}
        Card / Online payment {% if payment_txn_id %}(Txn: {{ payment_txn_id }}){% endif %}.
      {% endif %}
      <br/>
      <span class="inv-muted">Questions? Contact {{ brand_email | default: 'info@safecanopy.ai' }}.</span>
    </div>
  </div>

</body>
</html>



